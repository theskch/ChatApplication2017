<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sakac.vladimir.chatapplication2017">

    <application
        android:name=".ChatApplication_"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.HomeActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LogInActivity_" />
        <activity android:name=".activity.CreateConversationActivity_" />
        <activity android:name=".activity.ConversationActivity_"></activity>
    </application>

</manifest>