<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="userPhotoStyle">
        <item name="android:layout_width">@dimen/image_medium_size</item>
        <item name="android:layout_height">@dimen/image_medium_size</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="messageTextStyle">
        <item name="android:paddingRight">@dimen/x_small_margin</item>
        <item name="android:paddingLeft">@dimen/x_small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_medium_margin</item>
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="messageTimeStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/small_text</item>
    </style>


</resources>
